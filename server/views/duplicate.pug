extends layout

block body
  .container
    .row
      .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3

        form(method="post", action="/storage/duplicate", style="padding: 20%;", id="confirm")
          .form-group
            input.form-control(type="hidden" name="id" value=id)
          h2(style="text-align: center;" for="confirm")  Name of email?
            input.form-control(type="text" name="email_name" value=`Copy of email ${name}`)
          input.btn.btn-primary.btn-block(type="submit" value="Duplicate")
          a.btn.btn-default.btn-block(href="/storage/list" role="button") Cancel
